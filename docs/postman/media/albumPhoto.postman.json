{
  "info": {
    "name": "Album Platform - Media Module",
    "_postman_id": "c1a5f8a0-0000-0000-0000-mediamodule0001",
    "description": "Album Photo domain endpoints including bulk operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api/v1" },
    { "key": "accessToken", "value": "" },
    { "key": "albumId", "value": "" },
    { "key": "photoId", "value": "" }
  ],
  "item": [
    {
      "name": "Album Photos",
      "item": [

        {
          "name": "List Photos In Album",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/albums/{{albumId}}/photos?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["albums", "{{albumId}}", "photos"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ]
            }
          }
        },

        {
          "name": "Upload Photo(s) To Album",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "photos",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "photo",
                  "type": "file",
                  "src": ""
                },
                {
                  "key": "metadata",
                  "value": "{\"location\":\"Goa\"}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/albums/{{albumId}}/photos",
              "host": ["{{baseUrl}}"],
              "path": ["albums", "{{albumId}}", "photos"]
            },
            "description": "Supports single file (photo) or multiple files (photos[])"
          }
        },

        {
          "name": "Bulk Delete Photos",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"photoIds\": [\n    \"uuid-photo-1\",\n    \"uuid-photo-2\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/albums/{{albumId}}/photos/bulk-delete",
              "host": ["{{baseUrl}}"],
              "path": [
                "albums",
                "{{albumId}}",
                "photos",
                "bulk-delete"
              ]
            },
            "description": "Moves multiple photos to trash (max 100)"
          }
        },

        {
          "name": "Bulk Change Photo Visibility",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"photoIds\": [\n    \"uuid-photo-1\",\n    \"uuid-photo-2\"\n  ],\n  \"visibilityType\": \"RESTRICTED\",\n  \"allowedUserIds\": [\n    \"uuid-user-1\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/albums/{{albumId}}/photos/bulk-visibility",
              "host": ["{{baseUrl}}"],
              "path": [
                "albums",
                "{{albumId}}",
                "photos",
                "bulk-visibility"
              ]
            },
            "description": "Bulk visibility update (max 100 photos)"
          }
        }

      ]
    }
  ]
}