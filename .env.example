# ─────────────────────────────────────────────────────────────
# ENVIRONMENT
# ─────────────────────────────────────────────────────────────

NODE_ENV=development
PORT=3000
API_VERSION=v1


# ─────────────────────────────────────────────────────────────
# DATABASE (PostgreSQL)
# ─────────────────────────────────────────────────────────────

DB_HOST=localhost
DB_PORT=5432
DB_NAME=album_platform
DB_USER=postgres
DB_PASSWORD=postgres

DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000


# ─────────────────────────────────────────────────────────────
# REDIS
# ─────────────────────────────────────────────────────────────

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=album:


# ─────────────────────────────────────────────────────────────
# JWT CONFIGURATION
# ─────────────────────────────────────────────────────────────
# ⚠️ In production, both secrets MUST be 64+ characters.

JWT_SECRET=dev-secret-change-in-production-min-64-characters-xxxxxxxxxxxxxxxx
JWT_EXPIRES_IN=15m

JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-min-64-characters-xxxxxxxxxxxx
JWT_REFRESH_EXPIRES_IN=7d


# ─────────────────────────────────────────────────────────────
# PASSWORD RESET
# ─────────────────────────────────────────────────────────────

PASSWORD_RESET_TOKEN_EXPIRES_IN=3600000


# ─────────────────────────────────────────────────────────────
# RATE LIMITING
# ─────────────────────────────────────────────────────────────

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10


# ─────────────────────────────────────────────────────────────
# FILE UPLOAD CONFIGURATION
# ─────────────────────────────────────────────────────────────

STORAGE_PROVIDER=local

UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp

# Local storage
UPLOAD_LOCAL_BASE_PATH=./uploads
UPLOAD_BASE_URL=http://localhost:3000/uploads

# S3 Storage (used only if STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=


# ─────────────────────────────────────────────────────────────
# LOGGING
# ─────────────────────────────────────────────────────────────

LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d


# ─────────────────────────────────────────────────────────────
# CORS
# ─────────────────────────────────────────────────────────────

CORS_ORIGIN=http://localhost:3000
